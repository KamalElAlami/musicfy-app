generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  firstName String 
  lastName String 
  userName String @unique
  email String @unique
  password String
  birthday DateTime
  createdAt DateTime @default(now())
}

model Friendship {
  id Int @id @default(autoincrement())
  userId1 Int
  userId2 Int
  status String
  createdAt DateTime @default(now())
}

model Songs {
  id Int @id @default(autoincrement())
  spotifyId Int @unique
  title String
  artist String
  genre String
  album String
}