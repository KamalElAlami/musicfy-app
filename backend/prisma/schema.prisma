generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  profilePic String
  firstName String 
  lastName String 
  userName String @unique
  email String @unique
  password String
  FavoriteSongs Songs[] @relation("favoritedSongs")
  birthday DateTime
  createdAt DateTime @default(now())
}

model Friendship {
  id Int @id @default(autoincrement())
  userId1 Int
  userId2 Int
  status FriendshipStatus @default(NOTFRIEND)
  createdAt DateTime @default(now())
}

model Songs {
  id Int @id @default(autoincrement())
  spotifyId Int @unique
  title String
  artist String
  genre String
  album Stringls
  
  FavoritedUser Int?
  FavoritedBy User? @relation("favoritedSongs", fields: [FavoritedUser], references: [id])
}

enum FriendshipStatus {
  NOTFRIEND
  FRIEND
  PENDING
  BLOCKED
}